<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent1_50"
    android:orientation="vertical">

    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="                               修改信息"
        android:textColor="@android:color/system_accent2_800"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp">

        <View
            android:id="@+id/view30"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="用户名" />

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="81dp">

        <View
            android:id="@+id/view31"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:text="体重" />

        <EditText
            android:id="@+id/editTextChangeWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <View
        android:id="@+id/view15"
        android:layout_width="match_parent"
        android:layout_height="33dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="84dp">

        <View
            android:id="@+id/view32"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="43dp"
            android:layout_height="23dp"
            android:text="身高" />

        <EditText
            android:id="@+id/editTextChangeHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <View
        android:id="@+id/view16"
        android:layout_width="match_parent"
        android:layout_height="29dp" />

    <Button
        android:id="@+id/info_button_change_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:backgroundTint="@android:color/system_accent1_400"/>
</LinearLayout>